{
	"$schema": "https://biomejs.dev/schemas/2.3.9/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"css": {
		"parser": {
			"tailwindDirectives": true
		}
	},
	"files": {
		"ignoreUnknown": false
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"includes": ["**", "!app/api-client.ts"],
		"rules": {
			"recommended": true,
			"a11y": {
				"useButtonType": "off",
				"noAutofocus": "off",
				"noSvgWithoutTitle": "off",
				"noStaticElementInteractions": "off",
				"noLabelWithoutControl": "off",
				"useKeyWithClickEvents": "off"
			},
			"correctness": {
				"useParseIntRadix": "off"
			},
			"performance": {
				"noImgElement": "off"
			},
			"style": {
				"noNonNullAssertion": "off"
			},
			"suspicious": {
				"noArrayIndexKey": "off",
				"noExplicitAny": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
